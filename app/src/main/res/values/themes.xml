<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NasaLessons" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="myAttrColorPrimary">@color/teal_700</item>
    </style>

    <style name="DayRedTheme" parent="Theme.NasaLessons">
        <item name="colorPrimary">@color/primaryDayThemeColor</item>
        <item name="colorPrimaryVariant">@color/primaryDayThemeColor</item>
        <item name="colorSecondary">@color/secondaryDayThemeColor</item>
        <!-- Customize your theme here. -->
        <item name="myAttrColorPrimary">@color/dayThemeColorPrimary</item>
    </style>

    <style name="NightRedTheme" parent="Theme.NasaLessons">
        <item name="colorPrimary">@color/primaryNightThemeColor</item>
        <item name="colorPrimaryVariant">@color/primaryNightThemeColor</item>
        <item name="colorSecondary">@color/secondaryNightThemeColor</item>
        <!-- Customize your theme here. -->
        <item name="myAttrColorPrimary">@color/primaryDayThemeColor</item>
    </style>


</resources>